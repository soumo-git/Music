<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Top Bar without dropdown -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Downloads Title (no dropdown icon) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/downloads"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Link Input Bar -->
        <LinearLayout
            android:id="@+id/linkInputContainer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_weight="3"
            android:background="@drawable/bg_search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <EditText
                android:id="@+id/etLinkInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Paste video or playlist link"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:maxLines="1"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textHint"
                android:textSize="14sp"
                android:importantForAutofill="no" />

            <ImageButton
                android:id="@+id/btnExtract"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ripple_circle"
                android:src="@drawable/ic_download"
                android:contentDescription="Extract"
                android:padding="4dp"
                app:tint="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>

    <!-- Downloads Fragment Container -->
    <FrameLayout
        android:id="@+id/downloadsFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp" />

</FrameLayout>
