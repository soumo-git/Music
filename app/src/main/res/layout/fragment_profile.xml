<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header Section -->
            <LinearLayout
                android:id="@+id/profileHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_profile_header"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="48dp"
                android:paddingBottom="32dp">

                <!-- Profile Picture -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/ivProfilePicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person"
                        android:background="@color/surfaceColor"
                        android:padding="24dp"
                        android:contentDescription="@string/cd_profile_picture" />
                </androidx.cardview.widget.CardView>

                <!-- User Name -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/guest_user"
                    android:textColor="@color/textPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Sign In Button (shown when not signed in) -->
                <LinearLayout
                    android:id="@+id/btnSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_google_signin_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_google"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/sign_in_with_google"
                        android:textColor="#1F1F1F"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

            </LinearLayout>

            <!-- Menu Items Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- Downloads -->
                <LinearLayout
                    android:id="@+id/menuDownloads"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_download"
                        app:tint="@color/colorAccent"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/downloads"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/dividerColor" />

                <!-- Settings -->
                <LinearLayout
                    android:id="@+id/menuSettings"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/colorAccent"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/settings"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/dividerColor" />

                <!-- Equalizer -->
                <LinearLayout
                    android:id="@+id/menuEqualizer"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_equalizer"
                        app:tint="@color/colorAccent"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/equalizer"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/dividerColor" />

                <!-- Duo ID -->
                <LinearLayout
                    android:id="@+id/menuDuoId"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_smartphone"
                        app:tint="@color/colorAccent"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/duo_id_menu"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvDuoIdPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/textSecondary"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />
                </LinearLayout>

                <!-- Section Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/backgroundColor" />

                <!-- User Agreement -->
                <LinearLayout
                    android:id="@+id/menuUserAgreement"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_agreement"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/user_agreement"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/dividerColor" />

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/menuPrivacyPolicy"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_privacy"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />
                </LinearLayout>

                <!-- Section Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/backgroundColor" />

                <!-- Update Automatically -->
                <LinearLayout
                    android:id="@+id/menuUpdateAutomatically"
                    style="@style/ProfileMenuItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_update"
                        app:tint="@color/textSecondary"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/update_automatically"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchAutoUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Sign Out Section (only visible when signed in) -->
                <LinearLayout
                    android:id="@+id/signOutSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Section Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/backgroundColor" />

                    <!-- Sign Out -->
                    <LinearLayout
                        android:id="@+id/menuSignOut"
                        style="@style/ProfileMenuItemStyle"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_logout"
                            app:tint="@color/errorColor"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="@string/sign_out"
                            android:textColor="@color/errorColor"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Bottom Spacing -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
