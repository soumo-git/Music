<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@drawable/bg_drawer_header"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_lg"
    android:paddingEnd="@dimen/spacing_lg"
    android:paddingBottom="@dimen/spacing_lg">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="@dimen/drawer_profile_size"
        android:layout_height="@dimen/drawer_profile_size"
        android:background="@drawable/bg_circle"
        android:contentDescription="@string/cd_profile_picture"
        android:padding="@dimen/spacing_md"
        android:src="@drawable/ic_music_note"
        android:scaleType="centerCrop"/>

    <!-- User Name (shown when signed in) -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:text="@string/developer_name"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_xl"
        android:textStyle="bold"
        android:visibility="gone"/>

    <!-- Sign In Button (shown when not signed in) -->
    <LinearLayout
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/spacing_md"
        android:background="@drawable/bg_google_signin_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_google"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Sign in with Google"
            android:textColor="#1F1F1F"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

</LinearLayout>
