<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="8dp">

    <!-- Video Thumbnail -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@color/surfaceColor"
                android:contentDescription="Video thumbnail"
                tools:src="@drawable/ic_music_note"/>

        </androidx.cardview.widget.CardView>

        <!-- Duration Badge -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:background="@drawable/bg_duration_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@color/textPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="4:23"/>

    </FrameLayout>

    <!-- Video Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp">

        <!-- Channel Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivChannelAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_person"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:contentDescription="Channel avatar"/>

        <!-- Title and Channel Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                tools:text="Ed Sheeran - Perfect (Lyrics)"/>

            <TextView
                android:id="@+id/tvChannelInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                tools:text="7clouds · 2.1B views · 2 days ago"/>

        </LinearLayout>

        <!-- Download Button with Progress -->
        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp">
            
            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ripple_circle"
                android:padding="4dp"
                android:src="@drawable/ic_download"
                app:tint="@color/textSecondary"
                android:contentDescription="Download"/>
            
            <!-- Indeterminate progress (extraction) -->
            <ProgressBar
                android:id="@+id/progressExtracting"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleSmall"/>
            
            <!-- Determinate progress (downloading) -->
            <ProgressBar
                android:id="@+id/progressDownloading"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="gone"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/circular_progress"/>
        </FrameLayout>

        <!-- More Options -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ripple_circle"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/textSecondary"
            android:contentDescription="More options"/>

    </LinearLayout>

</LinearLayout>
