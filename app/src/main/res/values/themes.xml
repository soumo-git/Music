<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Music" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Smooth transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Music.Splash" parent="Theme.Music">
        <item name="android:windowBackground">@color/splashBackground</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Duo Tab Text Appearance (dark mode optimized) -->
    <style name="DuoTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Dark Mode Alert Dialog Style -->
    <style name="DarkAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/surfaceColor</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DarkDialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DarkDialogBodyStyle</item>
    </style>

    <style name="DarkDialogTitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="DarkDialogBodyStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- Search EditText Style -->
    <style name="SearchEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/searchBarHint</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Drawer Item Style -->
    <style name="DrawerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Profile Menu Item Style -->
    <style name="ProfileMenuItemStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Song Title Style -->
    <style name="SongTitleStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Song Subtitle Style -->
    <style name="SongSubtitleStyle">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/bottomNavBackground</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <!-- Player Bottom Sheet Dialog Style -->
    <style name="PlayerBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/PlayerBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="PlayerBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_peekHeight">0dp</item>
    </style>

    <!-- Circle Image View Style for ShapeableImageView -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Rounded Corner 8dp Style for ShapeableImageView -->
    <style name="RoundedCorner8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Video Player Theme - Fullscreen immersive -->
    <style name="Theme.Music.VideoPlayer" parent="Theme.Music">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Modern Loading Spinner Style -->
    <style name="ModernLoadingSpinner" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/loading_spinner_modern</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    
    <!-- Small Modern Loading Spinner Style -->
    <style name="ModernLoadingSpinnerSmall" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/loading_spinner_small</item>
        <item name="android:indeterminateDuration">800</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- Duo ID Bottom Sheet Style -->
    <style name="DuoIdBottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DuoIdBottomSheetModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DuoIdBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>
</resources>
